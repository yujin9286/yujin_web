extends ../layout

block content
  .container
    h1.main-title= user.name
          
    dl.row
      dt.col-sm-3 이메일
      dd.col-sm-9
        a(href=`mailto:${user.email}`)= user.email

      dt.col-sm-3 생성
      dd.col-sm-9= user.createdAt
      
      if user.facebook.id
        dt.col-sm-3 페이스북
        dd.col-sm-9
          img.img-fluid.rounded-circle(src= user.facebook.photo)

    hr
    p
      a.btn.btn-outline-secondary(href='/users/') 목록
      | 
      a.btn.btn-outline-primary(href=`/users/${user._id}/edit`) 수정
      | 
      a.btn.btn-outline-danger.need-confirm-btn(href=`/users/${user._id}?_method=DELETE`) 삭제
